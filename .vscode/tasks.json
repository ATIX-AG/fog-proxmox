{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "command": "bundler",
    "args": ["exec"],
    "echoCommand": true,
    "tasks": [
        {
            "taskName": "echo",
            "type": "shell",
            "command": "echo Hello"
        },
        {
            "taskName": "Run Script",
            "args": ["ruby", "${file}"]
        },
        {
            "taskName": "Exec",
            "args": ["ruby", "main.rb"]
        },
        {
            "taskName": "Test",
            "args": ["rspec"]
}
    ]
}